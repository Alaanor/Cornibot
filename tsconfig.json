{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "module": "commonjs",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "preserveSymlinks": true,
        "strict": true,
        "sourceMap": true,
        "types": [
            "mocha",
            "chai",
        ],
        "target": "es6",
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}