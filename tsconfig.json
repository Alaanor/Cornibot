{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "module": "commonjs",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "outDir": "dist",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "preserveSymlinks": true,
        "strict": true,
        "sourceMap": true,
        "target": "es6",
    },
    "include": [
        "src/**/*"
    ]
}