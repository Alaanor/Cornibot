{
    "name": "cornibot",
    "version": "0.0.1",
    "description": "A bot in JS",
    "license": "MIT",
    "author": {
        "name": "Pierre Demessence",
        "email": "pierre.demessence@gmail.com"
    },
    "contributors": [
        "Pierre Demessence"
    ],
    "homepage": "https://github.com/Pierre-Demessence/Cornibot",
    "repository": "github/Pierre-Demessence/Cornibot",
    "bugs": {
        "url": "https://github.com/Pierre-Demessence/Cornibot/issues"
    },
    "main": "src/server.js",
    "scripts": {
        "serve": "node --inspect=5858 -r ts-node/register src/server.ts",
        "serve:watch": "nodemon",
        "serve:prod": "cross-env NODE_ENV=production node dist/server.js",
        "build": "tsc",
        "test": "mocha -r ts-node/register test/unit/**/*.test.ts",
        "test:coverage": "nyc npm run test",
        "lint": "tsc --noEmit && eslint . --ext .js,.ts --quiet",
        "lint:fix": "npm run lint -- --fix"
    },
    "dependencies": {
        "@types/node": "^12.12.24",
        "canvas": "^2.6.1",
        "canvas-constructor": "^3.1.0",
        "discord.js": "git+https://github.com/discordjs/discord.js.git#a53d865",
        "discord.js-commando": "git+https://github.com/discordjs/Commando.git#4beeec8",
        "moment": "^2.24.0",
        "node-fetch": "^2.6.0",
        "string-argv": "^0.3.1",
        "winston": "^3.2.1",
        "winston-daily-rotate-file": "^4.4.1"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@types/chai": "^4.2.7",
        "@types/mocha": "^5.2.7",
        "@types/moment": "^2.13.0",
        "@types/node-fetch": "^2.5.4",
        "@types/string-argv": "^0.3.0",
        "@types/triple-beam": "^1.3.0",
        "@types/ws": "^6.0.4",
        "@typescript-eslint/eslint-plugin": "^2.16.0",
        "@typescript-eslint/parser": "^2.16.0",
        "chai": "^4.2.0",
        "cross-env": "^6.0.3",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-plugin-prettier": "^3.1.2",
        "husky": "^4.0.7",
        "i": "^0.3.6",
        "mocha": "^7.0.0",
        "nodemon": "^1.19.4",
        "npm": "^6.13.6",
        "nyc": "^15.0.0",
        "prettier": "^1.19.1",
        "source-map-support": "^0.5.16",
        "ts-node": "^8.6.2",
        "tslint": "^5.20.1",
        "typescript": "^3.7.4"
    },
    "husky": {
        "hooks": {}
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "npm run serve",
        "ext": "ts"
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "extension": [
            ".ts",
            ".tsx"
        ],
        "include": [
            "src/**/*.ts"
        ],
        "exclude": [
            "**/*.d.ts"
        ],
        "reporter": [
            "html",
            "text",
            "text-summary"
        ],
        "all": true
    },
    "prettier": {
        "printWidth": 2000,
        "singleQuote": false,
        "tabWidth": 4,
        "useTabs": false
    }
}
